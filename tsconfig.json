{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "watch": false,
    "lib": [ "es6", "dom" ]
  },
  "exclude": [
    "out",
    "node_modules",
    "src/sass",
    "src/assets",
    "wwwroot",
    "webpack",
    "dist"
  ],
  "compileOnSave": false
}